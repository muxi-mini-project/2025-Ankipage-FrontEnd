{
  "name": "ankipage",
  "displayName": "Ankipage",
  "version": "0.0.1",
  "description": "Ankipage, a chrome extension to anki your thoughts.",
  "author": "bingling-sama <bingling_sama@qq.com>",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . && prettier ./*.{ts,tsx,js,jsx,json} --check",
    "lint:fix": "eslint . --fix && prettier ./**/*.{ts,tsx,js,jsx,json} --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-scrollbar-hide": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lottie-react": "^2.4.1",
    "postcss": "^8.5.2",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "scripting",
      "sidePanel"
    ]
  },
  "plasmo": {
    "entries": {
      "sidepanel": "src/sidepanel"
    },
    "manifest": {
      "action": {},
      "side_panel": {
        "default_path": "sidepanel.html"
      }
    }
  }
}
